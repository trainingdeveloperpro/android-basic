<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/background">

    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/text_login"
            android:textSize="@dimen/tSizeBig"
            android:textColor="@android:color/white"/>
    <EditText
            android:id="@+id/et_name"
            android:inputType="textEmailAddress"
            android:layout_width="@dimen/wBigEditText"
            android:layout_height="@dimen/hBigEditText"
            android:hint="@string/text_email"
            android:layout_below="@id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/bigSpace"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:theme="@style/whiteUnder"/>
    <EditText
            android:id="@+id/et_pass"
            android:inputType="textPassword"
            android:hint="@string/text_pass"
            android:layout_width="@dimen/wBigEditText"
            android:layout_height="@dimen/hBigEditText"
            android:layout_below="@id/et_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/smallSpace"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:theme="@style/whiteUnder"/>
    <Button
            android:id="@+id/btn_login"
            android:text="@string/text_login"
            android:layout_below="@id/et_pass"
            android:layout_width="@dimen/wButton"
            android:layout_height="@dimen/hButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/smallSpace"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_border"/>
    <TextView
            android:id="@+id/tv_first"
            android:text="@string/text_first"
            android:layout_below="@id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/smallSpace"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:onClick="signIn"/>

</RelativeLayout>
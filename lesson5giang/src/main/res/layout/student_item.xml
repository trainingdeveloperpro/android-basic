<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/paddingTop_Bottom_cardView"
    android:paddingBottom="@dimen/paddingTop_Bottom_cardView"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/layout_width_height_user"
            android:layout_height="@dimen/layout_width_height_user"
            android:src="@drawable/user" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/paddingLeft_Linear_Item"
            >
            <TextView
                android:id="@+id/studentname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/textSize_name"
                android:text="@string/name"
                />

            <TextView
                android:id="@+id/birthyear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="@dimen/textSize_age_phone"
                android:text="@string/age"
                />

            <TextView
                android:id="@+id/txtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="@dimen/textSize_age_phone"
                android:text="@string/phone"
                />
            </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
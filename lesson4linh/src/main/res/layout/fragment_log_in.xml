<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".LoginFragment">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/register_email_text"
              android:textColor="@color/colorTextLight"
              android:textSize="@dimen/text_size_all_label_medium"
              android:id="@+id/text_register_email_label"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_register_email"
            android:layout_marginBottom="@dimen/margin_all_blocks"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:theme="@style/edittext_theme"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/register_password_text"
              android:textColor="@color/colorTextLight"
              android:textSize="@dimen/text_size_all_label_medium"
              android:id="@+id/text_register_password_label"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_register_password"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:theme="@style/edittext_theme"/>

</LinearLayout>
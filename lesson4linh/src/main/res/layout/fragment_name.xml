<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".NameFragment">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/register_first_name_text"
              android:textColor="@color/colorTextLight"
              android:textSize="@dimen/text_size_all_label_medium"
              android:id="@+id/text_register_first_name"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_register_first_name"
            android:layout_marginBottom="@dimen/margin_all_blocks"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            android:theme="@style/edittext_theme"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/register_last_name_text"
              android:textColor="@color/colorTextLight"
              android:textSize="@dimen/text_size_all_label_medium"
              android:id="@+id/text_register_last_name_label"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_register_last_name"
            android:layout_marginBottom="@dimen/margin_all_blocks"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            android:theme="@style/edittext_theme"/>

</LinearLayout>